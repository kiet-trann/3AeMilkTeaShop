@page
@model MilkTeaAdminWeb.Pages.Products.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Tạo mới sản phẩm</h1>
<hr />
<div class="container">
    <form method="post" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Tên sản phẩm -->
        <div class="form-group row">
            <label asp-for="ProductRequestModel.ProductName" class="col-md-3 col-form-label">Tên sản phẩm</label>
            <div class="col-md-9">
                <input asp-for="ProductRequestModel.ProductName" class="form-control" />
                <span asp-validation-for="ProductRequestModel.ProductName" class="text-danger"></span>
            </div>
        </div>

        <!-- Mô tả -->
        <div class="form-group row">
            <label asp-for="ProductRequestModel.Description" class="col-md-3 col-form-label">Mô tả</label>
            <div class="col-md-9">
                <textarea asp-for="ProductRequestModel.Description" class="form-control"></textarea>
                <span asp-validation-for="ProductRequestModel.Description" class="text-danger"></span>
            </div>
        </div>

        <!-- Danh mục -->
        <div class="form-group row">
            <label asp-for="ProductRequestModel.CategoryId" class="col-md-3 col-form-label">Danh mục</label>
            <div class="col-md-9">
                <select asp-for="ProductRequestModel.CategoryId" class="form-control">
                    <option value="">-- Chọn danh mục --</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.CategoryId">@category.CategoryName</option>
                    }
                </select>
                <span asp-validation-for="ProductRequestModel.CategoryId" class="text-danger"></span>
            </div>
        </div>

        <!-- Giá cho Size S -->
        <div class="form-group row">
            <label asp-for="ProductRequestModel.PriceS" class="col-md-3 col-form-label">Giá (Size S)</label>
            <div class="col-md-9">
                <input asp-for="ProductRequestModel.PriceS" class="form-control" />
                <span asp-validation-for="ProductRequestModel.PriceS" class="text-danger"></span>
            </div>
        </div>

        <!-- Giá cho Size M -->
        <div class="form-group row">
            <label asp-for="ProductRequestModel.PriceM" class="col-md-3 col-form-label">Giá (Size M)</label>
            <div class="col-md-9">
                <input asp-for="ProductRequestModel.PriceM" class="form-control" />
                <span asp-validation-for="ProductRequestModel.PriceM" class="text-danger"></span>
            </div>
        </div>

        <!-- Giá cho Size L -->
        <div class="form-group row">
            <label asp-for="ProductRequestModel.PriceL" class="col-md-3 col-form-label">Giá (Size L)</label>
            <div class="col-md-9">
                <input asp-for="ProductRequestModel.PriceL" class="form-control" />
                <span asp-validation-for="ProductRequestModel.PriceL" class="text-danger"></span>
            </div>
        </div>

        <!-- Tình trạng sẵn có cho các kích thước -->
        <div class="form-group row">
            <label class="col-md-3 col-form-label">Tình trạng sẵn có</label>
            <div class="col-md-3">
                <div class="form-check">
                    <input asp-for="ProductRequestModel.IsAvailableS" class="form-check-input" />
                    <label asp-for="ProductRequestModel.IsAvailableS" class="form-check-label">Size S</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-check">
                    <input asp-for="ProductRequestModel.IsAvailableM" class="form-check-input" />
                    <label asp-for="ProductRequestModel.IsAvailableM" class="form-check-label">Size M</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-check">
                    <input asp-for="ProductRequestModel.IsAvailableL" class="form-check-input" />
                    <label asp-for="ProductRequestModel.IsAvailableL" class="form-check-label">Size L</label>
                </div>
            </div>
        </div>

        <!-- Đường dẫn ảnh -->
        <div class="form-group row">
            <label asp-for="ProductRequestModel.ImageUrl" class="col-md-3 col-form-label">Đường dẫn ảnh</label>
            <div class="col-md-9">
                <input asp-for="ProductRequestModel.ImageUrl" type="file" class="form-control" />
                <span asp-validation-for="ProductRequestModel.ImageUrl" class="text-danger"></span>
            </div>
        </div>

        <!-- Nút Tạo mới -->
        <div class="form-group row">
            <div class="col-md-9 offset-md-3">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-page="Index">Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
