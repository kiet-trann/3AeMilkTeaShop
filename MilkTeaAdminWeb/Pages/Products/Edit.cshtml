@page
@model MilkTeaAdminWeb.Pages.Products.EditModel

@{
	ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<hr />
<div class="row">
	<div class="col-md-6">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<!-- Hidden Field for ProductId -->
			<input type="hidden" asp-for="ProductViewModel.ProductId" />

			<!-- Product Name -->
			<div class="form-group">
				<label asp-for="ProductViewModel.ProductName" class="control-label"></label>
				<input asp-for="ProductViewModel.ProductName" class="form-control" />
				<span asp-validation-for="ProductViewModel.ProductName" class="text-danger"></span>
			</div>

			<!-- Category Selection -->
			<div class="form-group">
				<label asp-for="ProductViewModel.CategoryId" class="control-label"></label>
				<select asp-for="ProductViewModel.CategoryId" class="form-control">
					<option value="">Select Category</option>
					@foreach (var category in Model.Categories)
					{
						<option value="@category.CategoryId">
							@category.CategoryName
						</option>
					}
				</select>
				<span asp-validation-for="ProductViewModel.CategoryId" class="text-danger"></span>
			</div>

			<!-- Price for Size S -->
			<div class="form-group">
				<label asp-for="ProductViewModel.PriceS" class="control-label"></label>
				<input asp-for="ProductViewModel.PriceS" class="form-control" />
				<span asp-validation-for="ProductViewModel.PriceS" class="text-danger"></span>
			</div>

			<!-- Price for Size M -->
			<div class="form-group">
				<label asp-for="ProductViewModel.PriceM" class="control-label"></label>
				<input asp-for="ProductViewModel.PriceM" class="form-control" />
				<span asp-validation-for="ProductViewModel.PriceM" class="text-danger"></span>
			</div>

			<!-- Price for Size L -->
			<div class="form-group">
				<label asp-for="ProductViewModel.PriceL" class="control-label"></label>
				<input asp-for="ProductViewModel.PriceL" class="form-control" />
				<span asp-validation-for="ProductViewModel.PriceL" class="text-danger"></span>
			</div>

			<!-- Availability for Size S -->
			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="ProductViewModel.IsAvailableS" /> Available for Size S
				</label>
			</div>

			<!-- Availability for Size M -->
			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="ProductViewModel.IsAvailableM" /> Available for Size M
				</label>
			</div>

			<!-- Availability for Size L -->
			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="ProductViewModel.IsAvailableL" /> Available for Size L
				</label>
			</div>

			<!-- Submit Button -->
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
