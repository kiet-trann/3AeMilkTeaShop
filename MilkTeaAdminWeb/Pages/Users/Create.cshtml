@page
@model MilkTeaAdminWeb.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Create User";
}

<h1 class="font-weight-bold text-center mb-4">Tạo Người Dùng</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Tên Tài Khoản</label>
                <input asp-for="UserRequestModel.Username" class="form-control" />
                <span asp-validation-for="UserRequestModel.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Mật Khẩu</label>
                <input type="password" asp-for="UserRequestModel.Password" class="form-control" />
                <span asp-validation-for="UserRequestModel.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Họ Và Tên</label>
                <input asp-for="UserRequestModel.FullName" class="form-control" />
                <span asp-validation-for="UserRequestModel.FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Số Điện Thọai</label>
                <input asp-for="UserRequestModel.PhoneNumber" class="form-control" />
                <span asp-validation-for="UserRequestModel.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Vai Trò</label>
                <select asp-for="UserRequestModel.Role" class="form-control">
                    <option value="">Chọn vai trò</option>
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role">@role</option>
                    }
                </select>
                <span asp-validation-for="UserRequestModel.Role" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Địa Chỉ Giao Hàng</label>
                <input asp-for="UserRequestModel.ShippingAddress" class="form-control" />
                <span asp-validation-for="UserRequestModel.ShippingAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Trạng Thái</label>
                <input asp-for="UserRequestModel.IsActive" type="checkbox" class="form-check-input" />
                <span asp-validation-for="UserRequestModel.IsActive" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br></br>
<div>
    <a asp-page="Index" class="btn btn-primary">Trở Lại</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
