@page
@model MilkTeaAdminWeb.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Tên đăng nhập -->
            <div class="form-group">
                <label asp-for="User.Username" class="control-label"></label>
                <input asp-for="User.Username" class="form-control" disabled />
                <span asp-validation-for="User.Username" class="text-danger"></span>
            </div>

            <!-- Mật khẩu -->
            <div class="form-group">
                <label asp-for="User.Password" class="control-label"></label>
                <input asp-for="User.Password" type="password" class="form-control" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>

            <!-- Họ và tên -->
            <div class="form-group">
                <label asp-for="User.FullName" class="control-label"></label>
                <input asp-for="User.FullName" class="form-control" />
                <span asp-validation-for="User.FullName" class="text-danger"></span>
            </div>

            <!-- Số điện thoại -->
            <div class="form-group">
                <label asp-for="User.PhoneNumber" class="control-label"></label>
                <input asp-for="User.PhoneNumber" class="form-control" />
                <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Vai trò -->
            <div class="form-group">
                <label asp-for="User.Role" class="control-label"></label>
                <select asp-for="User.Role" class="form-control">
                    <option value="">Chọn vai trò</option>
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role" selected="@role == Model.User.Role ? " selected" : null">@role</option>
                    }
                </select>
                <span asp-validation-for="User.Role" class="text-danger"></span>
            </div>

            <!-- Địa chỉ giao hàng -->
            <div class="form-group">
                <label asp-for="User.ShippingAddress" class="control-label"></label>
                <input asp-for="User.ShippingAddress" class="form-control" />
                <span asp-validation-for="User.ShippingAddress" class="text-danger"></span>
            </div>

            <!-- Trạng thái hoạt động -->
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="User.IsActive" /> @Html.DisplayNameFor(model => model.User.IsActive)
                </label>
            </div>

            <!-- Nút Lưu -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />
<div>
    <a asp-page="./Index" class="btn btn-secondary">Trở lại</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
