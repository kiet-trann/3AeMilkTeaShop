@page
@model MilkTeaAdminWeb.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "Xóa";
}

<h1 class="font-weight-bold text-center mb-4">Xóa Người Dùng</h1>

<h3>Bạn có chắc muốn xóa người dùng này không?</h3>
<div>
    <h4>Người dùng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Tài Khoản
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserViewModel.Username)
        </dd>
        <dt class="col-sm-2">
            Họ và Tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserViewModel.FullName)
        </dd>
        <dt class="col-sm-2">
            Số Điện Thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserViewModel.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Vai Trò
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserViewModel.Role)
        </dd>
        <dt class="col-sm-2">
            Địa Chỉ Giao Hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserViewModel.ShippingAddress)
        </dd>
        <dt class="col-sm-2">
            Trạng Thái Hoạt Động
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserViewModel.IsActive)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="UserViewModel.UserId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-primary">Trở lại</a>
    </form>
</div>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-info">
        @ViewData["Message"]
    </div>
}
