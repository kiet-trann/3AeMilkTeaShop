@page
@model MilkTeaAdminWeb.Pages.Toppings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Topping Name Field -->
            <div class="form-group">
                <label asp-for="ToppingRequestModel.ToppingName" class="control-label"></label>
                <input asp-for="ToppingRequestModel.ToppingName" class="form-control" />
                <span asp-validation-for="ToppingRequestModel.ToppingName" class="text-danger"></span>
            </div>

            <!-- Price Field -->
            <div class="form-group">
                <label asp-for="ToppingRequestModel.Price" class="control-label"></label>
                <input asp-for="ToppingRequestModel.Price" class="form-control" />
                <span asp-validation-for="ToppingRequestModel.Price" class="text-danger"></span>
            </div>

            <!-- IsAvailable Field (Optional) -->
            <div class="form-group form-check">
                <input asp-for="ToppingRequestModel.IsAvailable" class="form-check-input" />
                <label asp-for="ToppingRequestModel.IsAvailable" class="form-check-label"></label>
                <span asp-validation-for="ToppingRequestModel.IsAvailable" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
