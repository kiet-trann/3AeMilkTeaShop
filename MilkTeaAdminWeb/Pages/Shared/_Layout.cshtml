<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MilkTeaAdminWeb</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/MilkTeaAdminWeb.styles.css" asp-append-version="true" />
	<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
	<div class="d-flex" style="height: 100vh;">
		<!-- Sidebar -->
		<nav class="text-white w-64 p-4" style="background-color: rgba(244, 232, 218, 1);">
			<div class="text-center mb-6">
				<img src="~/img/MilkTeaLogo.jpg" alt="Milk Tea Logo" class="w-20 h-20 mx-auto">
			</div>
			<ul class="list-unstyled">
				<li><a href="/dashboard" class="block py-2 px-4 hover:bg-blue-600">Dashboard</a></li>
				<li><a href="@Url.Page("/Products/Index")" class="block py-2 px-4 hover:bg-blue-600">Quản lý sản phẩm</a></li>
				<li><a href="/orders" class="block py-2 px-4 hover:bg-blue-600">Quản lý đơn hàng</a></li>
				<li><a href="/users" class="block py-2 px-4 hover:bg-blue-600">Quản lý người dùng</a></li>
				<li><a href="/category" class="block py-2 px-4 hover:bg-blue-600">Quản lý danh mục</a></li> <!-- Thêm mục danh mục -->
				<li><a href="/toppings" class="block py-2 px-4 hover:bg-blue-600">Quản lý topping</a></li> <!-- Thêm mục topping -->
				<li><a href="/reports" class="block py-2 px-4 hover:bg-blue-600">Báo cáo</a></li>
				<li><a href="/settings" class="block py-2 px-4 hover:bg-blue-600">Cài đặt</a></li>
			</ul>
		</nav>

		<!-- Main Content Area -->
		<div class="flex-1">
			<!-- Navbar -->
			<header class="bg-white shadow-md p-4 flex justify-between items-center border-b">
				<div class="text-lg font-semibold">MilkTeaAdminWeb</div>
				<div class="flex items-center">
					<span class="mr-4">Chào, Admin</span>
					<button class="bg-red-500 text-white px-4 py-2 rounded" onclick="window.location.href='/logout'">Đăng xuất</button>
				</div>
			</header>

			<!-- Main Content -->
			<main role="main" class="p-6">
				@RenderBody()
			</main>

			<!-- Footer -->
			<footer class="bg-gray-800 text-white text-center p-4">
				<p>&copy; 2025 MilkTeaAdminWeb - All rights reserved.</p>
			</footer>
		</div>
	</div>

	<!-- Scripts -->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
