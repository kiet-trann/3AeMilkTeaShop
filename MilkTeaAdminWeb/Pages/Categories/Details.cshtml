@page
@model MilkTeaAdminWeb.Pages.Categories.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Chi Tiết Danh Mục</h1>

<div>
    <h4>Danh Mục</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Danh Mục
        </dt>
        <dd class="col-sm-10">
            @Model.Category.CategoryName
        </dd>
        <dt class="col-sm-2">
            Mô Tả
        </dt>
        <dd class="col-sm-10">
            @Model.Category.Description
        </dd>
        <dt class="col-sm-2">
            Trạng Thái
        </dt>
        <dd class="col-sm-10">
            @Model.Category.IsActive ? "Hoạt Động" : "Không Hoạt Động"
        </dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category.CategoryId">Sửa</a> |
    <a asp-page="./Index">Quay lại danh sách</a>
</div>
