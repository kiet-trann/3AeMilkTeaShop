@page "/"
@model MilkTeaAdminWeb.Pages.Authentication.LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <form method="post" class="login-form">
        <h3>Login</h3>

        <div class="form-group">
            <label for="Username">Username:</label>
            <input type="text" id="Username" name="Username" class="form-control" value="@Model.LoginViewModel.Username" required />
        </div>

        <div class="form-group">
            <label for="Password">Password:</label>
            <input type="password" id="Password" name="Password" class="form-control" value="@Model.LoginViewModel.Password" required />
        </div>

        <button type="submit" class="btn-submit">Login</button>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p class="error-message">@Model.ErrorMessage</p>
        }
    </form>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f4f8;
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        margin-top: 50px;
        color: #333;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        padding: 40px;
        margin: auto;
        width: 300px;
    }

    .login-form {
        width: 100%;
    }

    h3 {
        text-align: center;
        margin-bottom: 30px;
        font-size: 24px;
        color: #4CAF50;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: #555;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 16px;
    }

        .form-control:focus {
            border-color: #4CAF50;
            outline: none;
        }

    .btn-submit {
        width: 100%;
        padding: 12px;
        background-color: #4CAF50;
        color: white;
        font-size: 18px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-submit:hover {
            background-color: #45a049;
        }

    .error-message {
        color: red;
        font-size: 14px;
        text-align: center;
        margin-top: 20px;
    }
</style>
